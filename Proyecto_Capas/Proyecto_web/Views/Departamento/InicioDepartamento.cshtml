@model IEnumerable<Entidad.Departamento>

@{
    ViewBag.Title = "Listado de departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamento</h2>

<p>
    @Html.ActionLink("Crear Departamento", "Crear","Departamento")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.IdDepartamento)
        </th>*@
        <th>
            Nombre de Departamento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IdDepartamento)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NombreDepartamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.IdDepartamento }) |
            @Html.ActionLink("Detalles", "GetDepartamento", new {  id=item.IdDepartamento }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdDepartamento })
        </td>
    </tr>
}

</table>
